{
  "private": true,
  "name": "@tsdl/test-server",
  "version": "0.0.1",
  "author": "Jonathan Asplund <jonathan@asplund.net>",
  "license": "MIT",
  "scripts": {
    "dev:watch:node": "nodemon --watch \"dist/**/*.js\" --exec \"clear && TS_NODE_BASEURL=dist/tests/server node -r tsconfig-paths/register dist/tests/server\"",
    "dev:watch:tsc": "tsc --watch>/dev/null",
    "dev:watch": "run-p dev:watch:node dev:watch:tsc",
    "dev": "run-s build dev:watch",
    "build": "tsc",
    "start": "TS_NODE_BASEURL=dist/tests/server node -r tsconfig-paths/register dist/tests/server"
  },
  "dependencies": {
    "@tsdl/node": "file:../../packages/node",
    "@tsdl/server": "file:../../packages/server",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "yup": "^1.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asplunds/tsdl.git",
    "directory": "tests/server"
  }
}
